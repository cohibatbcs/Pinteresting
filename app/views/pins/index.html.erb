<h1>Listing pins</h1>

<table cellpadding='5%'>
  <thead>
    <tr>
      <th>Description</th>
      <th>User</th>
      <th>User ID</th>
      <th>Pin ID</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= pin.user.email if pin.user %></td>
        <td><%= pin.user.id if pin.user %></td>
        <td><%= pin.id %></td>
        <td><%= link_to 'View', pin %></td>
        <% if pin.user == current_user %>
          <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
          <td><%= link_to 'Delete', pin, method: :delete, data: { confirm: "Fo' real?" } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Pin', new_pin_path %>
<% end %>
